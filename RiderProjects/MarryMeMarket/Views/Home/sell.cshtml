@model MarryMeMarket.Models.Seller

@{
    ViewData["Title"] = "Become a Seller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- On medium devices, use 6 columns (half the width) with full width on small devices -->
        <div class="col-md-6 col-sm-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white text-center">
                    <h2 class="mb-0">Become a Seller</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Sell" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <div class="invalid-feedback">
                                Please enter your first name.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <div class="invalid-feedback">
                                Please enter your last name.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Item" class="form-label"></label>
                            <select asp-for="Item" class="form-select">
                                <option value="">-- Select an Item --</option>
                                <option>Wedding Dress</option>
                                <option>Venue</option>
                                <option>Decor</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select an item.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <div class="invalid-feedback">
                                Please provide a phone number.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Desired selling price:</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <div class="invalid-feedback">
                                Please enter a price.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">What city are you renting from?</label>
                            <input asp-for="Location" class="form-control" />
                            <div class="invalid-feedback">
                                Please provide a location.
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Uncomment the following line if you have the _ValidationScriptsPartial available *@
    @* <partial name="_ValidationScriptsPartial" /> *@
    <script>
        // Bootstrap form validation styling
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
